
IngredientsTool {
    margin-top: var(--gc-common-space-smaller);
}

/* HEAD */

#GC-Inventory-Item-Ingredients-Head { }

/* BODY */

#GC-Inventory-Item-Ingredients-Body { }

/* FOOT */

#GC-Inventory-Item-Ingredients-Foot {
    height: var(--list-head-size);
    background-color: var(--gc-color-bg-light);
    border-color: var(--gc-color-border-default);
    border-width: var(--gc-common-border-width);
    border-radius: var(--gc-common-border-radius);
    margin-top: var(--gc-common-space-smallest);
    overflow: hidden;
    flex-direction: row;
    flex-wrap: nowrap;
}

#GC-Inventory-Item-Ingredients-Foot-Add {
    border-radius: 0;
    border-width: 0;
    margin: 0;
    padding: 0;
    width: 100px;
    flex-grow: 1;
    flex-shrink: 0;
    flex-direction: row;
    flex-wrap: nowrap;
}

#GC-Inventory-Item-Ingredients-Foot-Add Image {
    height: var(--gc-list-head-image-size);
    width: var(--gc-list-head-image-size);
    margin: var(--gc-list-head-image-margin);
    padding: 0;
}

#GC-Inventory-Item-Ingredients-Foot-Add Label {
    -unity-text-align: middle-left;
    color: var(--unity-colors-button-text);
    height: var(--gc-list-head-image-size);
    margin: var(--gc-list-head-image-margin);
    padding: 0;
}